# AWS Configuration
AWS_REGION=ap-southeast-2
AWS_ACCOUNT_ID=your-account-id

# Deploy user ARN (for CloudFormation to create deploy role that trusts this user)
DEPLOY_USER_ARN=arn:aws:iam::your-account-id:user/quiz-night-live-deploy

# CloudFormation service role (created manually - has broad permissions)
CFN_ROLE_ARN=arn:aws:iam::your-account-id:role/quiz-night-live-cfn-role

# Ably Configuration
ABLY_API_KEY=your-ably-api-key
NEXT_PUBLIC_ABLY_KEY=your-ably-public-key

# Anthropic (for question generation)
ANTHROPIC_API_KEY=your-anthropic-api-key

# reCAPTCHA (for contact form and invite feature)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Route53 Hosted Zone ID for custom domain (optional - required for prod)
HOSTED_ZONE_ID=

# Domain (optional - required for prod)
DOMAIN_NAME=

# Stage
STAGE=dev

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth (optional)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Deploy user access key
AWS_ACCESS_KEY_ID=your-deploy-user-access-key
AWS_SECRET_ACCESS_KEY=your-deploy-user-secret-key

# Cognito User Pool ID (for E2E test seeding - populated after first deploy)
USER_POOL_ID=

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Admin email for seeding
ADMIN_EMAIL=your-admin@email.com

# SMTP credentials for SES (optional - for email features)
SMTP_USERNAME=
SMTP_PASSWORD=
